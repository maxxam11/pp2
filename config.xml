<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "ru.maxxam.kzn"
        version   = "1.2.1">
    
    <preference name='phonegap-version' value='cli-6.3.0' />
    <preference name="android-minSdkVersion" value="14" />

    <name>Казань</name>

    <description>
        Мобильное приложение городского портала kazanroom.ru для жителей Казани.
    </description>
    
    <!-- цвет фона по умолчанию -->
    <preference name="BackgroundColor" value="0xffffffff"/>
    <!-- чтобы верхние и нижние края не тянулись когда за них тянешь -->
    <preference name="DisallowOverscroll" value="true"/>
    
    

    <author href="http://www.holme.ru" email="karachev.m@gmail.com">
        MaxxaM
    </author>
    
    <!-- Убирает все разрешения кроме доступа в интернет -->
    <preference name="permissions"                value="none"/>
    
